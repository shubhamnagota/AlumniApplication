<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sworks.mitalumniapp.LoginActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>

    <TextView
        android:id="@+id/latv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/laet2"
        android:layout_alignLeft="@+id/latv3"
        android:layout_alignStart="@+id/latv3"
        android:layout_marginBottom="33dp"
        android:text="Enrollment No."
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/latv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/latv2"
        android:layout_alignStart="@+id/latv2"
        android:layout_below="@+id/app_bar"
        android:layout_marginTop="55dp"
        android:text="Log In"

        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/latv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:id="@+id/laet1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/latv2"
        android:layout_alignLeft="@+id/laet2"
        android:layout_alignStart="@+id/laet2"
        android:layout_marginBottom="-7dp"
        android:elegantTextHeight="false"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/laet2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/latv3"
        android:layout_marginBottom="-7dp"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_toEndOf="@+id/latv2"
        android:layout_toRightOf="@+id/latv2"
        android:ems="10"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/lab1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/lacb1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Login"/>

    <TextView
        android:id="@+id/latv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/laet1"
        android:layout_alignLeft="@+id/laet1"
        android:layout_alignRight="@+id/laet1"
        android:layout_alignStart="@+id/laet1"
        android:layout_below="@+id/laet1"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/latv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/laet2"
        android:layout_alignLeft="@+id/laet2"
        android:layout_alignRight="@+id/laet2"
        android:layout_alignStart="@+id/laet2"
        android:layout_below="@+id/laet2"
        android:layout_marginTop="5dp"/>

    <CheckBox
        android:id="@+id/lacb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/latv3"
        android:layout_alignStart="@+id/latv3"
        android:layout_alignTop="@+id/latv5"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:text="Remember Me"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lapb1"
        android:layout_above="@+id/lab1"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
