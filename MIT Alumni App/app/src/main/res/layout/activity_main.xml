<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="100dp"
    android:minWidth="100dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sworks.mitalumniapp.MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>

    <Button
        android:id="@+id/lab1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        android:text="Login"/>

    <Button
        android:id="@+id/mab2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/lab1"
        android:layout_alignStart="@+id/lab1"
        android:layout_below="@+id/lab1"
        android:layout_marginTop="34dp"
        android:text="News"/>

    <Button
        android:id="@+id/mab3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/mab2"
        android:layout_alignStart="@+id/mab2"
        android:layout_below="@+id/mab2"
        android:layout_marginTop="29dp"
        android:text="About MIT"/>


</RelativeLayout>
