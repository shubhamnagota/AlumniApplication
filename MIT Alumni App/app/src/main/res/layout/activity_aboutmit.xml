<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutMITActivity">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MIT"
        android:textSize="40sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/app_bar"
        android:layout_marginLeft="17sp"
         />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/abtmit"
                android:id="@+id/abtmit"
                android:textSize="18sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/abtmit"
                android:layout_marginTop="10dp"
                android:text="Reach Us: "
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/textView9" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/abtmit"
                android:layout_toRightOf="@+id/textView9"

                android:layout_marginTop="10dp"
                android:autoLink="map"
                android:id="@+id/reachusid"
                android:text="@string/reachus"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact us: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/reachusid"
                android:layout_marginTop="22sp"
                android:id="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView10"
                android:layout_below="@id/reachusid"
                android:layout_marginTop="22sp"
                android:id="@+id/contactid"
                android:autoLink="phone"
                android:text="@string/contactus"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email us: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/contactid"
                android:layout_marginTop="10sp"
                android:id="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView11"
                android:layout_below="@id/contactid"
                android:layout_marginTop="10sp"
                android:autoLink="email"
                android:text="@string/emailus"
                android:textSize="18sp"/>




        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
